import java.awt.Graphics;
import javax.swing.ImageIcon;
import java.awt.Image;

public class Player extends GameObject {
    private int yVelocity = 0;
    private final int GRAVITY = 1;
    private final int JUMP_STRENGTH = -15; //negative = up (0,0 is in top left corner)
    private boolean onGround = true;
    
    private Image runningPlayerImage;

    public Player(int x, int y) {
        super(x, y, 50, 80); //calls GameObject constructor (used to be 60)
        
        //load image    
        ImageIcon icon = new ImageIcon("runningPlayer.png");
        runningPlayerImage = icon.getImage();
        

    }

    @Override
    public void update() {
        y += yVelocity; //yVel. is 0 until arrow key pressed
        if (!onGround) {
            yVelocity += GRAVITY; //will bring character back down
        }
        if (y >= 283) { //on ground
            y = 283;
            yVelocity = 0;
            onGround = true;
        }
    }

    public void jump() {
        //if (onGround) { 
        if (y>=80) { //while player is still on the screen
            onGround = false; //triggers gravity to later bring back down
            yVelocity = JUMP_STRENGTH; //yVel. increases
        }
    }


    @Override
    public void draw(Graphics g) {
        //Graphics2D g2 = (Graphics2D)g; 
        //g2.setColor(Color.BLACK);
        
        //g.setColor(java.awt.Color.BLUE);
        //g.fillRect(x, y, width, height);
        g.drawImage(runningPlayerImage, x, y, width, height, null);
    }
}
